{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/scripts/*"]
        },
        "plugins": [
            { "name": "tslint-language-service"}
        ],
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node",
        "module": "esNext",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "es2015",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": [
            "webpack-env"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}